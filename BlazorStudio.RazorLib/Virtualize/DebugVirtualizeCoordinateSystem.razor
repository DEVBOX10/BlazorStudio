@typeparam T

<button @onclick="SetTargetComponent"
        class="btn btn-primary">
    Set Target Component
</button>

@if (_virtualizeCoordinateSystemComponent is null)
{
    <div>_virtualizeCoordinateSystemComponent is null</div>
}
else
{
    <div class="bstudio_virtualize-coordinate-system">
        <div>
            @@_data.Length

            &nbsp;->&nbsp;

            @_virtualizeCoordinateSystemComponent._data.Length
        </div>
        <div>
            @@_scrollTop

            &nbsp;->&nbsp;

            @_virtualizeCoordinateSystemComponent._scrollTop
        </div>
        <div>
            @@_scrollLeft
            
            &nbsp;->&nbsp;
            
            @_virtualizeCoordinateSystemComponent._scrollLeft
        </div>
        <div>
            @@_javascriptWidthResult

            &nbsp;->&nbsp;

            @_virtualizeCoordinateSystemComponent._javascriptWidthResult
        </div>
        <div>
            @@_javascriptHeightResult
            
            &nbsp;->&nbsp;
            
            @_virtualizeCoordinateSystemComponent._javascriptHeightResult
        </div>
    </div>
}
