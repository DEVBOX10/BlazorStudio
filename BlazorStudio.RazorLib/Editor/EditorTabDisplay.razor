<div class="bstudio_editor-tab-display @IsActiveCssClass"
     @onclick="FireSetActiveTabIndexOnClick">
    @if (PlainTextEditor.FileHandle?.AbsoluteFilePath is not null)
    {
        <text>@PlainTextEditor.FileHandle.AbsoluteFilePath.FilenameWithExtension</text>

        if (PlainTextEditor.FileHandle.Edit.Any)
        {
            <span style="margin-left: 7px;">*</span>
        }
    }
    else
    {
        <text>InMemory.unsaved</text>
    }
    
    <div class="bstudio_editor-tab-close-display"
         @onclick:stopPropagation="true"
         @onclick="FireDisposePlainTextEditorOnClick">
        <IconClose />
    </div>
</div>