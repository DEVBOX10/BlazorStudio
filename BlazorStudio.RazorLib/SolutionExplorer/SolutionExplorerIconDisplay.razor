@using BlazorStudio.ClassLib.FileConstants

<span title="icon"
      class="bstudio_solution-explorer-icon-display">

    @if (AbsoluteFilePath.IsDirectory)
    {
        if (AbsoluteFilePath.FileNameNoExtension == UniqueFileFacts.Properties)
        {
            <IconProperties />
        }
        else if (AbsoluteFilePath.FileNameNoExtension == UniqueFileFacts.WwwRoot)
        {
            <IconWwwRoot />
        }
        else
        {
            <IconFolder />
        }
    }
    else
    {
        switch (AbsoluteFilePath.ExtensionNoPeriod)
        {
            case ExtensionNoPeriodFacts.DOT_NET_SOLUTION:
                <IconSolution/>
                break;
            case ExtensionNoPeriodFacts.C_SHARP_PROJECT:
                <IconProject />
                break;
            case ExtensionNoPeriodFacts.RAZOR_MARKUP:
                <IconRazor />
                break;
            default:
                <IconFile />
                break;
        }
    }
</span>