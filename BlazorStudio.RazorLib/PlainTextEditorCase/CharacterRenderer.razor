<span class="pte_character-renderer @IsSelectedCssClassString"
      style="@WidthStyleString"
      @onclick="DispatchPlainTextEditorOnClickAction"
      @onclick:stopPropagation="true"
      @onmouseover="SelectTextOnMouseOverAsync"
      @onmouseover:stopPropagation="true"
      title="@CharacterColumnIndex">
    @if (Character == string.Empty)
    {
        <span style="width: 1ch; height: 100%;"></span>
    }
    else
    {
        @((MarkupString) Character)
    }

    @if(IsFocused && ShouldDisplayCursor) 
    {
        <Cursor />
    }
</span>