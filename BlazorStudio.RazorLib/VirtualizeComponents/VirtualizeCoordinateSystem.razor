@typeparam T

<div class="bstudio_virtualize-coordinate-system"
     style="@(DimensionsOfCoordinateSystemViewport.DimensionsCssString)"
     id="@ComponentId">
    
    @{
        // Create a local reference to avoid a new instance being set while rendering.
        var localVirtualizeCoordinateSystemResult = _virtualizeCoordinateSystemResult;

            <div style="display: flex; flex-direction: column;">
                <div style="display: flex;" class="bstudio_row-top">
                    <div id="@_topElementId"
                         class="bstudio_virtualize-coordinate-system-boundary"
                         style="background-color: blue; @GetTopBoundaryCssString(localVirtualizeCoordinateSystemResult)">

                    </div>
                </div>
            
                <div style="display: flex;" class="bstudio_row-middle">
                    <div id="@_leftElementId"
                         class="bstudio_virtualize-coordinate-system-boundary"
                         style="background-color: red; @GetLeftBoundaryCssString(localVirtualizeCoordinateSystemResult)">

                    </div>
                    
                    @{
                        var localData = _data;

                        <div class="@ContentWrapperCssClass">
                            @foreach (var item in localData)
                            {
                                @ChildContent(item)
                            }
                        </div>
                    }
                    
                    <div id="@_rightElementId"
                         class="bstudio_virtualize-coordinate-system-boundary"
                         style="background-color: green; @GetRightBoundaryCssString(localVirtualizeCoordinateSystemResult)">

                    </div>
                </div>
            
                <div style="display: flex;" class="bstudio_row-bottom">
                    <div id="@_bottomElementId"
                         class="bstudio_virtualize-coordinate-system-boundary"
                         style="background-color: orange; @GetBottomBoundaryCssString(localVirtualizeCoordinateSystemResult)">

                    </div>
                </div>
            </div>
    }
</div>

