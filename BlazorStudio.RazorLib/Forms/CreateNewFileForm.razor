@using BlazorStudio.ClassLib.FileConstants
@if (IsTemplated && _fileName.EndsWith(ExtensionNoPeriodFacts.RAZOR_MARKUP))
{
       <input type="checkbox"
              class="bstudio_input bstudio_input-checkbox" 
              @onkeydown:stopPropagation="true" 
              @bind="_shouldAddCodebehind"/>
                                                               
       <text>&nbsp;Add Codebehind?</text>
                       
       <br/>
}

<input class="bstudio_input bstudio_input-text" 
       style="min-width: 100%"
       @ref="_inputElementReference"
       @bind="_fileName"
       @bind:event="oninput"
       @onkeydown="HandleOnKeyDown"
       @onkeydown:stopPropagation="true" />

<YesNoButtons OnYesAction="SubmitForm" OnNoAction="DeclineForm" />