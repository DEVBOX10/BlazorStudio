@{
    _exactMatchWrapper = _fileTemplatesFormWrappers
        .Single(x =>
            x.FileTemplate.IsExactTemplate.Invoke(FileName));

    GetRelatedFileTemplates();
    
    foreach (var relatedMatchWrapper in _relatedMatchWrappers)
    {
        <div @key="relatedMatchWrapper.FileTemplate.Id">
            <input type="checkbox" @bind="@relatedMatchWrapper.IsChecked" /> @relatedMatchWrapper.FileTemplate.DisplayName?
        </div>        
    }
}
