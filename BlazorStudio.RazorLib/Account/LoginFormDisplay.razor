<div class="bstudio_file-form-display"
     @onkeydown="HandleOnKeyDown">

    <div style="margin-bottom: 10px;">

        <div>
            <label for="bstudio_container-key-input">
                Container Name:
            </label>

            <input id="bstudio_container-key-input"
                   class="bstudio_input bstudio_input-text"
                   style="height: 2em;"
                   type="text"
                   placeholder="Container Name"
                   autocapitalize="none"
                   autocorrect="off"
                   autocomplete="off"
                   spellcheck="false"
                   @bind="ContainerKey"
                   @bind:event="oninput"
                   @ref="_containerInputElementReference"/>
        </div>

        <div class="bstudio_login-form-hint">
            ^ macro filter
        </div>
    </div>

    <div style="margin-bottom: 10px;">

        <div>
            <label for="bstudio_alias-key-input">
                Group Name:
            </label>

            <input id="bstudio_alias-key-input"
                   class="bstudio_input bstudio_input-text"
                   style="height: 2em;"
                   type="text"
                   placeholder="Group Name"
                   autocapitalize="none"
                   autocorrect="off"
                   autocomplete="off"
                   spellcheck="false"
                   @bind="GroupKey"
                   @bind:event="oninput"/>
        </div>
        
        <div class="bstudio_login-form-hint">
            ^ micro filter
        </div>
    </div>

    <div style="margin-bottom: 10px;">

        <div>
            <label for="bstudio_alias-input">
                Alias:
            </label>

            <input id="bstudio_alias-input"
                   class="bstudio_input bstudio_input-text"
                   style="height: 2em;"
                   type="text"
                   placeholder="Alias"
                   autocapitalize="none"
                   autocorrect="off"
                   autocomplete="off"
                   spellcheck="false"
                   @bind="Alias"
                   @bind:event="oninput"/>
        </div>

        <div class="bstudio_login-form-hint">
            ^ your display name
        </div>
    </div>
</div>