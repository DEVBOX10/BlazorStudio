@using BlazorStudio.ClassLib.Context
@using BlazorStudio.ClassLib.Store.TerminalCase

@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<ContextBoundary ContextRecord="ContextFacts.TerminalContext"
                 ClassCssString="bstudio_terminal-display"
                 StyleCssString="height: 100%; width: 100%;">

    <div class="bstudio_section-title">
        Terminal Display
    </div>

    <div class="bstudio_section-body"
         style="width: 100%;">
        
        <div class="bstudio_terminal-tabs-container">
            @foreach (var terminalCommandKey in TerminalCommandFacts.TERMINAL_COMMAND_KEYS)
            {
                <TerminalTab TerminalCommandKey="terminalCommandKey"/>
            }
        </div>

        <TerminalOutputDisplay TerminalCommandKey="TerminalStateWrap.Value.ActiveTerminalCommandKey"/>
    </div>
</ContextBoundary>