@using BlazorStudio.ClassLib.Context

@inherits Fluxor.Blazor.Web.Components.FluxorComponent

<ContextBoundary ContextRecord="ContextFacts.FolderExplorerContext"
                 ClassCssString="bstudio_terminal-display"
                 StyleCssString="height: 100%">

    <div class="bstudio_section-title">
        Terminal Display
    </div>

    <div class="bstudio_section-body">
        Body <ButtonDisplay OnClickFunc="async () => { }">StateHasChanged</ButtonDisplay>
        
        <div>
            @{
                var terminalResultState = TerminalResultStateWrap.Value;

                foreach (var result in TerminalResultStateWrap.Value.TerminalCommandResultMap)
                {
                    <div>
                        @GetAllTextEscaped(result.Value.StandardOut.ToString())    
                    </div>
                }
            }
        </div>
    </div>
</ContextBoundary>