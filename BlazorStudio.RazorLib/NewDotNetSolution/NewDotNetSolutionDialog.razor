<div class="bstudio_new-dot-net-solution-dialog">
    <div class="bstudio_new-dot-net-solution-dialog-body">
        <input class="bstudio_input bstudio_input-text"
               style="height: 2em;"
               placeholder="Solution name"
               @bind="_solutionName"
               @bind:event="oninput"/>

        <div style="height: calc(100% - 15em); min-height: 15rem; margin-top: 10px;">
            <BlazorStudio.RazorLib.InputFile.InputFileDialog OnEnterKeyDownOverride="InputFileDialogOnEnterKeyDownOverride"
                                                             ChooseContextMenuOption="InputFileDialogChooseContextMenuOption"
                                                             ShowFooter="false"/>
        </div>

        <div>
            Solution&nbsp;Name:
            <div><em>@SolutionName</em>.sln</div>
        </div>

        <div>
            Directory&nbsp;Absolute&nbsp;File&nbsp;Path:
            <div>
                <em>@AbsoluteFilePathString</em>
            </div>
        </div>

        <div>
            Command:
            <div>
                <em>@InterpolatedCommand</em>
            </div>
        </div>

        @if (_startingCreatingSolution)
        {
            <div>_startingCreatingSolution</div>
        }

        <button class="btn btn-primary"
                style="margin-top: 10px;"
                @onclick="DispatchTerminalNewSolutionOnClick">
            Accept
        </button>
    </div>
</div>