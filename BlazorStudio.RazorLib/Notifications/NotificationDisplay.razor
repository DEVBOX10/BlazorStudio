<div class="bstudio_notification"
     style="@CssStyleString">
    <div class="bstudio_notification-toolbar">
        <div class="bstudio_notification-title">
            @NotificationRecord.Title
        </div>

        <div class="bstudio_notification-control-buttons">
            <ButtonDisplay OnClickFunc="async () => DisposeNotification()">
                <IconClose/>
            </ButtonDisplay>
        </div>
    </div>

    <div class="bstudio_notification-body">
        <CascadingValue Value="NotificationRecord">
            <DynamicComponent Type="NotificationRecord.RendererType"
                              Parameters="NotificationRecord.Parameters"/>
        </CascadingValue>
    </div>
</div>