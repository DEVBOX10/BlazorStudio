@inherits Fluxor.Blazor.Web.Components.FluxorLayout

<BlazorStudio.RazorLib.StoreInitializerWrap/>

<div class="bstudio_theme-wrapper @ThemeStateWrap.Value.ThemeKey.KeyName">
    <div class="bstudio_main-layout">
        <h3>BlazorStudio MainLayout</h3>

        <SelectDisplay />

        <hr/>

        <TreeViewWrapDisplay ShouldDispose="false"
                             TreeViewWrapKey="_familyTreeViewKey"
                             RootItems="_rootPeople"
                             GetChildrenFunc="LoadPersonChildren"
                             Context="person"
                             OnEnterKeyDown="FamilyTreeViewOnEnterKeyDown"
                             OnSpaceKeyDown="FamilyTreeViewOnSpaceKeyDown">
            @person.DisplayName
        </TreeViewWrapDisplay>

        <hr/>

        <TreeViewWrapDisplay ShouldDispose="false"
                             TreeViewWrapKey="_themeTreeViewKey"
                             RootItems="_rootThemes"
                             GetChildrenFunc="LoadThemesChildren"
                             Context="theme"
                             OnEnterKeyDown="ThemeTreeViewOnEnterKeyDown"
                             OnSpaceKeyDown="ThemeTreeViewOnEnterKeyDown">
            @theme.KeyName
        </TreeViewWrapDisplay>
    </div>
</div>


