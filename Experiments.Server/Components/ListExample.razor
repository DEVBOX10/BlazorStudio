@using Microsoft.AspNetCore.Components.Web.Virtualization

<hr />

<div style="height: 500px; overflow-y: scroll;">
    @{
        // Ensure foreach variable does not change while enumerating
        var localMusicBands = MusicBandRepository
            .GetMusicBands()
            .ToArray();
    }
    
    @foreach (var musicBand in localMusicBands)
    {
        <MusicBandDisplay @key="musicBand.SeedIndex" MusicBand="musicBand"/>
    }
</div>

<hr />